<% if @place.errors.present? %>
	<% @place.errors.full_messages.each do |error| %>
		<%= error %>
		<br>
	<% end %>
<% end %>

<%= form_for @place do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :rating %>
		<%= f.text_field :rating %>
	</p>

	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>